<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bbc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buka Berita dari BBC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/ger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buka Berita Dari German"
        app:layout_constraintBottom_toTopOf="@id/bbc"
        app:layout_constraintStart_toStartOf="@id/bbc"
        app:layout_constraintEnd_toEndOf="@id/bbc"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buka Berita Dari Amerika"
        app:layout_constraintTop_toBottomOf="@id/bbc"
        app:layout_constraintStart_toStartOf="@id/bbc"
        app:layout_constraintEnd_toEndOf="@id/bbc" />

</androidx.constraintlayout.widget.ConstraintLayout>
