<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/gambarBerita"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Gambar Berita"/>

    <TextView
        android:id="@+id/namaBerita"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Nama Berita"
        android:textSize="20dp"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/gambarBerita"
        app:layout_constraintTop_toTopOf="@id/gambarBerita"/>

    <TextView
        android:id="@+id/deskripsiBerita"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Deskripsi Berita"
        android:textSize="15dp"
        android:ellipsize="end"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/gambarBerita"
        app:layout_constraintTop_toBottomOf="@id/namaBerita"/>

    <TextView
        android:id="@+id/authorBerita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating: 0.0"
        android:textSize="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/gambarBerita"
        app:layout_constraintTop_toBottomOf="@id/deskripsiBerita"/>

</androidx.constraintlayout.widget.ConstraintLayout>